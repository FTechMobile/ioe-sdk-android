<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginEnd="@dimen/fbase_dimen_10"
    android:id="@+id/constAlphabetRoot">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvAlphabetWord"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/alphabet_text"
        android:textColor="@color/blue"
        android:textSize="@dimen/fbase_text_size_16"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvAlphabetScore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_rectangle_blue_stroke"
        android:text="@string/score"
        android:textColor="@color/red_color"
        android:textSize="@dimen/fbase_text_size_12"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvAlphabetWord" />

</androidx.constraintlayout.widget.ConstraintLayout>
