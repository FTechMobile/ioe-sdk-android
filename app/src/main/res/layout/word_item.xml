<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginEnd="@dimen/fbase_dimen_10">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvWordScore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_circler_orange_bg"
        android:fontFamily="@font/f_font_bold"
        android:paddingHorizontal="@dimen/fbase_dimen_6"
        android:text="@string/score"
        android:textColor="@color/red_color"
        android:textSize="@dimen/fbase_text_size_14"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvWord"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/f_font_bold"
        android:text="@string/who"
        android:textColor="@color/black"
        android:textSize="@dimen/fbase_text_size_18"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvWordScore" />

</androidx.constraintlayout.widget.ConstraintLayout>
